---
interface Props {
    class?: string;
    withDivider?: boolean;
}

const { class: className, withDivider = false } = Astro.props;
---

<section
    class:list={[
        "mt-14 space-y-6 fade-in",
        withDivider && "border-t border-[var(--page-border)] pt-14",
        className,
    ]}
>
    <slot />
</section>
