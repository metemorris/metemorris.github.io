---
import "../styles/global.css";
const { title = "Mete", description = "Engineer • notes & projects" } = Astro.props;
---
<html lang="en" class="bg-white text-gray-900 dark:bg-zinc-900 dark:text-zinc-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen antialiased">
    <header class="border-b border-zinc-200/60 dark:border-zinc-800/60">
      <div class="mx-auto max-w-3xl px-5 py-4 flex items-center justify-between">
        <a href="/" class="font-semibold">Mete</a>
        <nav class="flex gap-4 text-sm">
          <a class="hover:underline" href="/">Home</a>
          <a class="hover:underline" href="/blog">Blog</a>
        </nav>
      </div>
    </header>
    <main class="mx-auto max-w-3xl px-5 py-8">
      <slot />
    </main>
    <footer class="mx-auto max-w-3xl px-5 py-10 text-sm text-zinc-500">
      © {new Date().getFullYear()} Mete
    </footer>
    <script>
      // simple dark mode toggle (optional): document.documentElement.classList.toggle('dark')
    </script>
  </body>
</html>
