---
import Base from "../../layouts/Base.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const items = await getCollection("posts");
  return items.map((p) => ({
    params: { slug: p.slug },
    props: p,
  }));
}

const post = Astro.props as CollectionEntry<"posts">;
const { Content } = await post.render();

import ShareButton from "../../components/ShareButton.astro";
import { calculateReadingTime } from "../../utils/readingTime";
const readingTime = calculateReadingTime(post.body || "");

const siteOrigin = Astro.site ?? "https://www.metemorris.com";
const canonicalUrl = new URL(`/posts/${post.slug}/`, siteOrigin).href;
const postOgImage = new URL(`/og/${post.slug}.png`, siteOrigin).href;
const blogPostingStructuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: post.data.seoTitle,
  description: post.data.seoDescription,
  datePublished: post.data.date.toISOString(),
  dateModified: post.data.date.toISOString(),
  author: {
    "@type": "Person",
    name: "Mete Morris",
    url: "https://www.metemorris.com/",
  },
  mainEntityOfPage: canonicalUrl,
  url: canonicalUrl,
  image: "https://www.metemorris.com/headshot.jpg",
  keywords: post.data.tags.join(", "),
};
---

<Base
  title={post.data.seoTitle}
  description={post.data.seoDescription}
  canonical={canonicalUrl}
  structuredData={[blogPostingStructuredData]}
  ogImage={postOgImage}
>
  <article class="mx-auto w-full max-w-[65ch] space-y-8 fade-in">
    <div class="space-y-3 border-b border-[var(--page-border)] pb-4">
      <p
        class="eyebrow text-left flex flex-wrap gap-1.5 text-[var(--page-muted)]"
      >
        {
          (post.data.tags?.length ? post.data.tags : ["Writing"]).map((tag) => (
            <a
              href={`/tags/${tag}`}
              class="rounded-full border border-[var(--page-border)] px-2 py-0.5 text-[0.65rem] uppercase tracking-[0.3em] text-[var(--page-muted)] hover:bg-[var(--page-border)] hover:text-white transition-colors"
            >
              {tag}
            </a>
          ))
        }
      </p>

      <h1 class="text-4xl font-semibold leading-snug">{post.data.title}</h1>

      <div
        class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between"
      >
        <p
          class="text-xs uppercase tracking-[0.3em] text-[var(--page-muted)] flex items-center gap-4"
        >
          <span>
            {
              post.data.date.toLocaleDateString(undefined, {
                month: "long",
                day: "numeric",
                year: "numeric",
              })
            }
          </span>
          <span class="opacity-50">â€¢</span>
          <span>{readingTime}</span>
        </p>

        <ShareButton url={canonicalUrl} title={post.data.title} />
      </div>
    </div>

    <div class="prose prose-lg prose-neutral dark:prose-invert w-full">
      <Content />
    </div>
  </article>
</Base>
