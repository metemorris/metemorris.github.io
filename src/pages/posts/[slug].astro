---
import Base from "../../layouts/Base.astro";
import { getCollection, type CollectionEntry } from "astro:content";

type Entry = CollectionEntry<"posts">;

export async function getStaticPaths() {
  const items = await getCollection("posts");
  return items.map((p: Entry) => ({
    params: { slug: p.slug },   // IMPORTANT: a string
    props: p,
  }));
}

const post = Astro.props as Entry;
const { Content } = await post.render();
---
<Base title={post.data.title} description={post.data.description}>
  <article class="space-y-4">
    <div class="space-y-2">
      <p class="eyebrow">{post.data.tags?.join(" Â· ") ?? "Writing"}</p>
      <h1 class="text-3xl font-semibold">{post.data.title}</h1>
      <p class="text-xs uppercase tracking-[0.3em] text-[var(--page-muted)]">
        {post.data.date.toLocaleDateString(undefined, { month: "long", day: "numeric", year: "numeric" })}
      </p>
    </div>
    <div class="prose prose-neutral dark:prose-invert max-w-none">
      <Content />
    </div>
  </article>
</Base>
