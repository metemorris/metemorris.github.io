---
import Base from "../layouts/Base.astro";
---

<Base title="Page Not Found — Mete" description="The page you requested could not be found.">
  <section class="flex min-h-[50vh] flex-col items-center justify-center text-center space-y-6 fade-in">
    <p class="eyebrow">404 · Not found</p>
    <div class="space-y-3 max-w-xl">
      <h1 class="text-3xl font-semibold">This page drifted off the map.</h1>
      <p class="muted text-base">
        The URL you entered does not exist. Double-check the spelling or jump back to the homepage to keep exploring.
      </p>
    </div>
    <a href="/" class="link">Return home</a>
  </section>
</Base>
